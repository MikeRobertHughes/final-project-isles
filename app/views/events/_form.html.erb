<div class="card big-padding">
  <%= form_for(@event) do |f| %>
    <% if @event.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

        <ul>
        <% @event.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <%= f.label :occasion %><br>
      <%= f.text_field :occasion %>
    </div>
    <div class="field">
      <%= f.label :description %><br>
      <%= f.text_area :description %>
    </div>
    <div class="field">
    <%= f.label :dateof %><br>
    <% if @event.dateof %>
      <%= f.text_field :dateof, class: "datepicker", value: @event.dateof.strftime("%B %e, %Y") %>
    <% else %>
      <%= f.text_field :dateof, class: "datepicker" %>
    <% end %>
  </div>
    <br />
    <div class="field">
      <%= f.hidden_field :friend_id, value: params[:friend_id] %>
    </div>
    <div class="actions">
      <%= f.submit class: "btn light-green accent-4"  %>
    </div>
  <% end %>
</div>
