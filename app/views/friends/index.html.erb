<div class='container'>
  <div class='row'>
    <div class='m12'>
      <h1>Friends</h1>

      <% unless @current_user.friends.empty? %>
      <table>
        <thead>
          <tr>
            <th>Friend</th>
            <th>Action</th>
          </tr>
        </thead>

        <tbody>
          <% @current_user.friends.each do |friend| %>
            <tr>
              <td><%= link_to "#{friend.friend_requester.full_name}", user_path(friend.friend_requester.id) if friend.friend_requester != @current_user %>
        <%= link_to "#{friend.friend_accepter.full_name}", user_path(friend.friend_accepter.id) if friend.friend_accepter != @current_user %></td>
              <td><%= link_to 'Edit', edit_friend_path(friend), class: "waves-effect waves-light btn light-green accent-4" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <% end %>
    </div>
  </div>
</div>
