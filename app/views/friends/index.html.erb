<h1>Friends</h1>

<% unless @current_user.friends.empty? %>
<table>
  <thead>
    <tr>
      <th>Friend requester</th>
      <th>Friend accepter</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @current_user.friends.each do |friend| %>
      <tr>
        <td><%= friend.friend_requester.full_name %></td>
        <td><%= friend.friend_accepter.full_name %></td>
        <td><%= link_to 'Show', friend %></td>
        <td><%= link_to 'Edit', edit_friend_path(friend) %></td>
        <td><%= link_to 'Destroy', friend, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<% end %>

<%= link_to 'New Friend', new_friend_path, class: "waves-effect waves-light btn light-green accent-4" %>
