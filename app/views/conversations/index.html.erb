<div class='container'>
  <div class='row'>
    <div class='m12'>
      <h1>Listing Conversations</h1>

      <table>
        <thead>
          <tr>
            <th>Friend</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @conversations.each do |conversation| %>
            <tr>
              <td><%= conversation.title %></td>
              <td><%= link_to 'Show', conversation %></td>
              <td><%= link_to 'Edit', edit_conversation_path(conversation) %></td>
              <td><%= link_to 'Destroy', conversation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <br>

      <%= link_to 'New Conversation', new_conversation_path, class: "waves-effect waves-light btn light-green accent-4"  %>
    </div>
  </div>
</div>
