<div class='container'>
  <div class='row'>
    <div class='m12'>
      <h1>Listing Conversations</h1>

      <table>
        <thead>
          <tr>
            <th>Friend</th>
            <th>Action</th>
          </tr>
        </thead>

        <tbody>
          <% @conversations.each do |conversation| %>
            <% if @current_user.id == conversation.friend.friend_requester_id || @current_user.id == conversation.friend.friend_accepter_id %>
            <tr>
              <td><%= conversation.title %></td>
              <td><%= link_to 'Conversation', conversation, class: "waves-effect waves-light btn light-green accent-4" %></td>
            </tr>
            <% end %>
          <% end %>
        </tbody>
      </table>

      <br>

    </div>
  </div>
</div>
