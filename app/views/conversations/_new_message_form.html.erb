<%= form_for(@new_message) do |f| %>

  <div class="field">
    <%= f.label :body %><br>
    <%= f.text_field :body %>
  </div>
  <div class="field">
    <%= f.hidden_field :friend_id, value: @conversation.friend_id %>
  </div>
  <div class="field">
    <%= f.hidden_field :user_id, value: @current_user.id %>
  </div>
  <div class="field">
    <%= f.hidden_field :conversation_id, value: @conversation.id %>
  </div>
  <div class="actions">
    <%= f.submit "Send Message", class: "btn light-green accent-4" %>
  </div>
<% end %>
