<h1>Listing Requests</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Requested friend</th>
      <th>Are friends</th>
      <th>Did confirm</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @requests.each do |request| %>
      <tr>
        <td><%= request.user_id %></td>
        <td><%= request.requested_friend_id %></td>
        <td><%= request.are_friends %></td>
        <td><%= request.did_confirm %></td>
        <td><%= link_to 'Show', request %></td>
        <td><%= link_to 'Edit', edit_request_path(request) %></td>
        <td><%= link_to 'Destroy', request, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Request', new_request_path, class: "waves-effect waves-light btn light-green accent-4" %>
