<div class='container'>
  <div class='row'>
    <div class='m12'>

      <div>
        <h5>
          On the blog, "<%= "#{@comment.blog.title}" %>"<strong> <%= @comment.user.full_name %></strong> said: "<%="#{ @comment.body }"%>" on the post, "<%= "#{@comment.post.title}" %>" by <%= "#{@comment.blog.user.full_name}"%>
        </h5>
      </div>

      <%= link_to 'Edit', edit_comment_path(:user_id => @comment.user, :blog_id => @comment.blog, :post_id => @comment.post), class: "waves-effect waves-light btn light-green accent-4" if @comment.user_id == @current_user.id %>
      <%= link_to 'Back', @comment.post, class: "waves-effect waves-light btn light-green accent-4" %>
      <%= link_to 'Delete Comment', @comment, method: :delete, data: { confirm: 'Are you sure?' }, class: "waves-effect waves-light btn light-green accent-4" if @comment.user_id == @current_user.id %>
    </div>
  </div>
</div>
