<h1>Listing Posts</h1>

<table>
  <thead>
    <tr>
      <th>Blog</th>
      <th>Title</th>
      <th>Body</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= link_to( "#{post.blog.title}", post.blog ) %></td>
        <td><%= link_to( "#{post.title}", post ) %></td>
        <td><%= link_to( "#{post.body}", post ) %></td>
        <td><%= link_to( "#{post.user.full_name}", post.user ) %></td>
        <td><%= link_to( 'Show', post ) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
