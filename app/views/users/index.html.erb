
<h1>Listing Users</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Email</th>
      <th>Username</th>
      <th>Age</th>
      <th>City</th>
      <th>State</th>
      <th>Twitter</th>
      <th>Github</th>
      <th>Linkedin</th>
      <th>Phone number</th>
      <th>Birthday</th>
      <th>Soundcloud</th>
      <th>Facebook</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.first_name %></td>
        <td><%= user.last_name %></td>
        <td><%= user.email %></td>
        <td><%= user.username %></td>
        <td><%= user.age %></td>
        <td><%= user.city %></td>
        <td><%= user.state %></td>
        <td><%= user.twitter %></td>
        <td><%= user.github %></td>
        <td><%= user.linkedin %></td>
        <td><%= user.phone_number %></td>
        <td><%= user.birthday %></td>
        <td><%= user.soundcloud %></td>
        <td><%= user.facebook %></td>
        <td><%= link_to 'Show', user %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New User', new_user_path %>
