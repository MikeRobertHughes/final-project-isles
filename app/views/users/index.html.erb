<div class='container'>
  <div class='row'>
    <div class='m12'>

      <h1>Listing Users</h1>

      <%= form_tag users_path, :method => 'get' do %>
        <p>
        <%= text_field_tag :search, params[:search], placeholder: "Search Users" %>
        <%= submit_tag "Search", :name => nil %>
        </p>
      <% end %>

      <table>
        <thead>
          <tr>
            <th>First name</th>
            <th>Last name</th>
            <th>Email</th>
            <th>Username</th>
            <th>Age</th>
            <th>City</th>
            <th>State</th>
            <th>Twitter</th>
            <th>Github</th>
            <th>Linkedin</th>
            <th>Phone number</th>
            <th>Birthday</th>
            <th>Soundcloud</th>
            <th>Facebook</th>
            <th colspan="3">Actions</th>
          </tr>
        </thead>

        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= user.first_name %></td>
              <td><%= user.last_name %></td>
              <td><%= user.email %></td>
              <td><%= user.username %></td>
              <td><%= user.age %></td>
              <td><%= user.city %></td>
              <td><%= user.state %></td>
              <td><%= user.twitter %></td>
              <td><%= user.github %></td>
              <td><%= user.linkedin %></td>
              <td><%= user.phone_number %></td>
              <td><%= user.birthday %></td>
              <td><%= user.soundcloud %></td>
              <td><%= user.facebook %></td>
              <td><%= link_to 'Show', user %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <br>

      <%= link_to 'Sign up!', new_user_path, class: "waves-effect waves-light btn light-green accent-4" %>
    </div>
  </div>
</div>
