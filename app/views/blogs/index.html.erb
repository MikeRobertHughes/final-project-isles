
<h1>Blogs</h1>

<% unless @current_user.blogs.empty? %>
  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>User</th>
        <th>Description</th>
      </tr>
    </thead>

    <tbody>
      <% @current_user.blogs.each do |blog| %>
        <tr>
          <td><%= link_to( "#{blog.title}", blog ) %></td>
          <td><%= link_to( "#{blog.user.full_name}", blog.user ) %></td>
          <td><%= link_to( "#{blog.description}", blog ) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>

<%= link_to 'New Blog', new_blog_path, class: "waves-effect waves-light btn light-green accent-4" %>
