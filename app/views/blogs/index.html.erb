
<h1>Blogs</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>User</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @blogs.each do |blog| %>
      <tr>
        <td><%= link_to( "#{blog.title}", blog ) %></td>
        <td><%= link_to( "#{blog.user.full_name}", blog.user ) %></td>
        <td><%= link_to( "#{blog.description}", blog ) %></td>
        <td><%= link_to 'Show', blog %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Blog', new_blog_path %>
