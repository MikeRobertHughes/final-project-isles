
<p>
  <strong>Title:</strong>
  <%= @blog.title %>
</p>

<p>
  <strong>User:</strong>
  <%= @blog.user.first_name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @blog.description %>
</p>

<h4>Posts for <%= @blog.title %></h4>

<%= link_to 'Edit', edit_blog_path(@blog.id) if @blog.user_id == @current_user.id %>
<%= link_to 'Destroy', @blog, method: :delete, data: { confirm: 'Are you sure?' } if @blog.user_id == @current_user.id %>

<table class="">
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th>Date</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @blog.posts.each do |post| %>
      <tr>
        <td><%= link_to( "#{post.title}", post ) %></td>
        <td><%= post.body %></td>
        <td><%= link_to( "#{post.user.full_name}", user_path(post.user)) %></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) if post.user == @current_user %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } if post.user == @current_user %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Edit', edit_blog_path(@blog) %> |
<%= link_to 'Back', blogs_path %>
