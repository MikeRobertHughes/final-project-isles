
  <br /><br />
  <div class='container'>
    <div class='row'>
      <div class='m12 m4 l4'>
          <h1 class="grey-text text-lighten-5 blogs center"><%= @blog.title %></h1>
          <hr class="grey-text text-lighten-5" />
          <h4 class="grey-text text-lighten-5 blogs center pacifico-font">
            <%= @blog.description %>
          </h4>

          <br />

        <% unless @blog.posts.empty? %>
          <% @blog.posts.each do |post| %>
            <div class="z-depth-1">
              <ul class="collection">
                <li class="collection-item">
                  <h4><%= link_to( "#{post.title}", post ) %></h4>
                  <p><%= link_to( "#{post.created_at.strftime("%B %e, %Y")}", post ) %></p><br/>
                  <p><%= link_to( "#{truncate(post.body, length: 350)}", post ) %></p>
                  <br />
                </li>
              </ul>
            </div>
            <br />
          <% end %>
        <% end %>

        <div class="card big padding">
          <br />
          <div class="row">
            <div class="col s12 m2 l2">
              <%= link_to 'Back', blogs_path, class: "waves-effect waves-light btn light-green accent-4 side-margin-left left little-margin-top" %>
            </div>
            <div class="col s12 m2 l2">
              <%= link_to 'New Post', new_post_path(:blog_id => @blog, :user_id => @blog), class: "waves-effect waves-light btn light-green accent-4 side-margin-left left little-margin-top" if @blog.user_id == @current_user.id %>
            </div>
            <div class="col s12 m2 l2">
              <%= link_to 'Edit Blog', edit_blog_path(@blog.id), class: "waves-effect waves-light btn light-green accent-4 side-margin-left left little-margin-top" if @blog.user_id == @current_user.id %>
            </div>
            <div class="col s12 m4 offset-m2 l3 offset-l3">
              <%= link_to 'Delete Blog', @blog, method: :delete, data: { confirm: 'Are you sure?' }, class: "waves-effect waves-light btn deep-orange accent-3 big-margin-right left little-margin-top side-margin-left" if @blog.user_id == @current_user.id %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

